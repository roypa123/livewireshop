<style>
   .checkout{
       align-items: center;
       padding:0.3em;
       margin:0.3em;
   }
   .checkout .checkout1{
       margin:0.1em;
       font-weight: bolder;
       text-align: center;
       font-size: 1.6em;
   }
   .checkout .checkout2{
       margin:0.5em;
   }
   .checkout .checkout21{
       position:center;
       padding: 0.5em;
       margin:0.2em;
       background: #ed2139bb;  /* fallback for old browsers */
       color: white;
       border-radius: 0.2em;
       text-align: center;
       align-items: center;
       width:50%;
   }

   .checkout .hidden{
       display:none;
   }
  
   .checkout .checkout3{
       align-items: center;
       align-content: center;
   }
   .checkout .checkout3 .form-group{
       margin:0.5em;
   }
   .checkout .checkout3 .form-group{
       margin:0.5em;
   }
   .checkout .checkout3 .button{
      background-color:rgb(23, 192, 23);
      color:white;
      font-weight: bolder;
      padding:0.7em;
      margin:0.7em;
      border:none;
      border-radius: 0.3em;
   }
    .checkout .checkout3 .button:hover{
      background-color:rgb(10, 143, 10);
    }
    @media only screen and (max-width: 600px) {
        .checkout .checkout21{
            width:100%;
        }
    }

</style>

<div class="checkout">
        <p class="checkout1">Checkout</p>
        <p class="checkout2"><strong>Your Total: Rs {{total}}</strong></p>
        <div id="charge-error" class="alert checkout21 {{#if noError}}hidden{{/if}}"  >
            {{errMsg}}
        </div>
        <form action="/checkout" method="post" id="checkout-form">
            <div class="checkout3">
                    <div class="form-group">
                        <label for="name">Name</label><br>
                        <input type="text" id="name" class="form-control" required   name="name">        
                    </div>
                    <div class="form-group">
                        <label for="address">Address</label><br>
                        <input type="text" id="address" class="form-control" required name="address">        
                    </div>
                    
                    <div class="form-group">
                        <label for="card-number">Credit Card Number</label><br>
                        <input type="text" id="card-number" class="form-control" required>        
                    </div>
                    
                    <table>
                        <tr>
                            <td>
                               <div class="form-group">
                               <label for="card-name">Card Holder Name</label><br>
                               <input type="text" id="card-name" class="form-control" required>        
                               </div>
                            </td>
                            <td>
                                <div class="form-group">
                                <label for="card-expiry-month">Expiration Month</label><br>
                                <input type="text" id="card-expiry-month" class="form-control" required>        
                                </div>
                            </td>
                        </tr>
                    </table>
                    
                    <table>
                        <tr>
                            <td>
                                <div class="form-group">
                                <label for="card-expiry-year">Expiration Year</label><br>
                                <input type="text" id="card-expiry-year" class="form-control" required>        
                                </div>
                            </td>
                            <td>
                                 <div class="form-group">
                                 <label for="card-cvc">CVV</label><br>
                                 <input type="text" id="card-cvc" class="form-control" required>        
                                 </div>
                            </td>
                        </tr>
                    </table> 
                 <button type="submit" class="button">Buy now</button>   
            </div>   
        </form>
</div>


<script src="https://js.stripe.com/v2/"></script>

<script type="text/javascript" src="javascripts/checkout.js"></script>